{
  "manifest_version": 3,
  "name": "NotesBook",
  "version": "2.3",
  "description": "This notebook allows you to save your notes separately for each website.",
  "commands": {
    "toggle-feature": {
      "suggested_key": {
        "default": "Ctrl+Shift+S"
      },
      "description": "Toggle the notes popup with Ctrl+Shift+S"
    }
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "img/16.png",
      "48": "img/48.png",
      "128": "img/128.png"
   }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
      "storage",
      "tabs"
  ],
  "icons": {
   "16": "img/16.png",
   "48": "img/48.png",
    "128": "img/128.png"
  }
}
